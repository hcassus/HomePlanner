{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://hrp/task-list.json",
  "items": {
    "id": "http://hrp/task.json",
    "properties": {
      "createdAt": {
        "id": "http://hrp/task.json/createdAt",
        "type": "integer"
      },
      "description": {
        "id": "http://hrp/task.json/description",
        "type": "string"
      },
      "status": {
        "id": "http://hrp/task.json/status",
        "enum": [0,1]
      },
      "updatedAt": {
        "id": "http://hrp/task.json/updatedAt",
        "type": "integer"
      },
      "uuid": {
        "id": "http://hrp/task.json/uuid",
        "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
      }
    }
  },
  "type": "array"
}